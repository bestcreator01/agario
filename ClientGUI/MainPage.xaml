    <VerticalStackLayout>
        <ScrollView
            x:Name="StartScreen"
            IsVisible="true"
            BackgroundColor="White">
            <!-- Welcome screen -->
            <VerticalStackLayout>
                <VerticalStackLayout 
                    Spacing="30" 
                    HorizontalOptions="CenterAndExpand" 
                    VerticalOptions="Center">

                    <Label
                    x:Name="AgarioTitle"
                    Text="Agar.io"
                    FontSize="Title"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"/>

                    <HorizontalStackLayout Spacing="50">
                        <Label 
                            x:Name="LabelPlayerName"
                            Text="Player Name"
                            TextColor="Black"
                            FontAttributes="Bold"/>
                        <Entry
                            x:Name="EntryPlayerName"
                            Text=""
                            TextColor="Black"
                            BackgroundColor="GhostWhite"
                            WidthRequest="300"/>
                        <!--TextChanged="OnPlayerNameChanged"/>-->
                    </HorizontalStackLayout>

                    <HorizontalStackLayout
                    Spacing="93">
                        <Label 
                        x:Name="LabelServer"
                        Text="Server"
                        TextColor="Black"
                        FontAttributes="Bold"/>
                        <Entry
                        x:Name="EntryServer"
                        Text="localhost"
                        TextColor="Black"
                        BackgroundColor="GhostWhite"
                        WidthRequest="300"/>
                        <!--TextChanged="OnServerChanged"/>-->
                    </HorizontalStackLayout>

                    <Button
                    x:Name="StartGameButton"
                    Text="Start Game"
                    TextColor="Black"
                    Clicked="StartGameButtonClicked"
                    BackgroundColor="Pink"/>

                    <Label
                    x:Name="Warning"
                    IsVisible="false"
                    Text=""
                    TextColor="Red"
                    HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Game screen -->
        <ScrollView
            x:Name="GameScreen"
            IsVisible="false"
            HorizontalOptions="Start"
            VerticalOptions="Start">
            <HorizontalStackLayout>
                <!-- Add game UI here -->
                <GraphicsView 
                    x:Name="PlaySurface"
                    IsVisible="true"
                    BackgroundColor="Blue"
                    HeightRequest="800"
                    WidthRequest="800">
                    <!--<GraphicsView.GestureRecognizers>
                        <PointerGestureRecognizer PointerMoved="PointerChanged"/>
                        <TapGestureRecognizer Tapped="OnTap"/>
                        <PanGestureRecognizer PanUpdated="PanUpdated"/>
                    </GraphicsView.GestureRecognizers>-->
                </GraphicsView>

                <!-- Display information about the game -->
                <VerticalStackLayout>
                    <Label
                        x:Name="Title"
                        Text="Agario - Step One!"
                        TextColor="Black"
                        FontAttributes="Bold"
                        FontSize="Title"/>

                    <Label
                        x:Name="FPS"
                        Text="FPS: "
                        TextColor="Black"
                        FontSize="Subtitle"/>

                    <Label
                            x:Name="CircleCenter"
                            Text="Center: "
                            TextColor="Black"
                            FontSize="Subtitle"/>

                    <Label
                            x:Name="Direction"
                            Text ="Direction: "
                            TextColor="Black"
                            FontSize="Subtitle"/>
                </VerticalStackLayout>
            </HorizontalStackLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>
