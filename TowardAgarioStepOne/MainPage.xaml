    <ScrollView
        BackgroundColor="White">
        
         <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                x:Name="Title"
                Text="Agario - Step One!"
                TextColor="Black"
                FontAttributes="Bold"
                FontSize="Title"
                HorizontalOptions="Center"/>

            <Label
                x:Name="FPS"
                Text="FPS: "
                TextColor="Black"
                FontSize="Subtitle"
                HorizontalOptions="Center"/>

            <HorizontalStackLayout
                Spacing="200"
                HorizontalOptions="Center">
                <Label
                    x:Name="CircleCenter"
                    Text="Center: "
                    TextColor="Black"
                    FontSize="Subtitle"/>

                <Label
                    x:Name="Direction"
                    Text ="Direction: "
                    TextColor="Black"
                    FontSize="Subtitle"/>
            </HorizontalStackLayout>

            <GraphicsView 
                x:Name="PlaySurface"
                VerticalOptions="Center"
                BackgroundColor="Blue"
                HeightRequest="800"
                WidthRequest="800" />

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
